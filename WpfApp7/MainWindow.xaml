<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учёт автомобилей" Height="497" Width="878">
    <Grid Margin="0,0,10,0">
        <ComboBox x:Name="optionsComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="OptionsComboBox_SelectionChanged">
            <ComboBoxItem Content="Физические лица, нуждающиеся в техосмотре"/>
            <ComboBoxItem Content="Юридические лица, нуждающиеся в техосмотре"/>
            <ComboBoxItem Content="Количество юридических автомобилей по типу кузова"/>
            <ComboBoxItem Content="Все автомобили"/>
        </ComboBox>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Width="848" Height="395" IsReadOnly="True" FontSize="14" FontFamily="Arial"/>
    </Grid>
</Window>
